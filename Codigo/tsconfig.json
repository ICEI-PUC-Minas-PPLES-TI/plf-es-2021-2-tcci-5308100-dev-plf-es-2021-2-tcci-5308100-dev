{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@Models/*": ["./packages/server/src/database/entities/*"],
      "~/*": ["./packages/server/src/*"]
    }
  }
}
